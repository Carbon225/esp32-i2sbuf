menu "I2SBUF"
	config I2SBUF_DMA_BUF_LEN
		int "Single buffer size"
		default 256
		
	config I2SBUF_TASK_STACK_SIZE
		int "Sample generator/writer task stack size"
		default 4096
		
	config I2SBUF_TASK_PRIORITY
		int "Sample generator/writer task priority"
		default 10
		
	config I2SBUF_BUFFER_ON_HEAP
		bool "Use malloc to allocate buffer instead of the heap"
		default false 
endmenu
